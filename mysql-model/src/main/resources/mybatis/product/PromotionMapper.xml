<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.personal.product.dao.PromotionDao">

	<select id="get" resultType="com.personal.product.domain.PromotionDO">
		select `id`,`name`,`memo`,`is_all`,`type`,`overflow`,`reduce`,`discount`,`add_time`,`update_time`,`start_time`,`end_time`,`status` from bus_promotion where id = #{value}
	</select>

	<select id="list" resultType="com.personal.product.domain.PromotionDO">
		select `id`,`name`,`memo`,`is_all`,`type`,`overflow`,`reduce`,`discount`,`add_time`,`update_time`,`start_time`,`end_time`,`status` from bus_promotion
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="memo != null and memo != ''"> and memo = #{memo} </if>
		  		  <if test="isAll != null and isAll != ''"> and is_all = #{isAll} </if>
		  		  <if test="type != null and type != ''"> and type = #{type} </if>
		  		  <if test="overflow != null and overflow != ''"> and overflow = #{overflow} </if>
		  		  <if test="reduce != null and reduce != ''"> and reduce = #{reduce} </if>
		  		  <if test="discount != null and discount != ''"> and discount = #{discount} </if>
		  		  <if test="addTime != null and addTime != ''"> and add_time = #{addTime} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="startTime != null and startTime != ''"> and start_time = #{startTime} </if>
		  		  <if test="endTime != null and endTime != ''"> and end_time = #{endTime} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from bus_promotion
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="memo != null and memo != ''"> and memo = #{memo} </if>
		  		  <if test="isAll != null and isAll != ''"> and is_all = #{isAll} </if>
		  		  <if test="type != null and type != ''"> and type = #{type} </if>
		  		  <if test="overflow != null and overflow != ''"> and overflow = #{overflow} </if>
		  		  <if test="reduce != null and reduce != ''"> and reduce = #{reduce} </if>
		  		  <if test="discount != null and discount != ''"> and discount = #{discount} </if>
		  		  <if test="addTime != null and addTime != ''"> and add_time = #{addTime} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="startTime != null and startTime != ''"> and start_time = #{startTime} </if>
		  		  <if test="endTime != null and endTime != ''"> and end_time = #{endTime} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.personal.product.domain.PromotionDO">
		insert into bus_promotion
		(
			`id`, 
			`name`, 
			`memo`, 
			`is_all`, 
			`type`, 
			`overflow`, 
			`reduce`, 
			`discount`, 
			`add_time`, 
			`update_time`, 
			`start_time`, 
			`end_time`, 
			`status`
		)
		values
		(
			#{id}, 
			#{name}, 
			#{memo}, 
			#{isAll}, 
			#{type}, 
			#{overflow}, 
			#{reduce}, 
			#{discount}, 
			#{addTime}, 
			#{updateTime}, 
			#{startTime}, 
			#{endTime}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.personal.product.domain.PromotionDO">
		update bus_promotion 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="memo != null">`memo` = #{memo}, </if>
			<if test="isAll != null">`is_all` = #{isAll}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="overflow != null">`overflow` = #{overflow}, </if>
			<if test="reduce != null">`reduce` = #{reduce}, </if>
			<if test="discount != null">`discount` = #{discount}, </if>
			<if test="addTime != null">`add_time` = #{addTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="startTime != null">`start_time` = #{startTime}, </if>
			<if test="endTime != null">`end_time` = #{endTime}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from bus_promotion where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from bus_promotion where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>